<div class="container">
    <div class="row">
        <div class="col s12">
            <img src="../public/assets/images/bob-with-a-burger.png" alt="Bob's Burgers">
        </div>
    </div>
    <div class="row">
        <div class="col s4">
            <h1>Burgers of the Day</h1>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devour=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col s2">
            <img src="../public/assets/images/burgerPic.png" alt="Burger Pic">
        </div>
        <div class="col s4">
            <h1>Burgers of the Dead</h1>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        {{id}}. {{name}}
                    </li>>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <h2>Add a Burger! (No puns necessary) </h2>
        <form>
            <input type="text" name="name" id="burger">
            <button type="submit">Add a Burger!</button>
        </form>
    </div>
</div>