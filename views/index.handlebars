<div class="container">
    <div class="row header">
        <div class="col s12 center">
            <br>
            <img src="./assets/images/bob-with-a-burger.png" height="300px" alt="Bob's Burgers" class="responsive-img">
            <h2>Welcome to Bob's Burgers!</h2>
        </div>
    </div>
    <div class="row">
        <div class="col l5 m6 s12">
            <h3 class="header">Burgers of the Day</h3>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devour=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col l2 center middle hide-on-med-and-down">
            <img src="./assets/images/burgerPic.png" height="150px" alt="Burger Pic" class="responsive-img burgerimg">
        </div>
        <div class="col l5 m6 s12">
            <h3 class="header">Burgers of the Dead</h3>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        {{id}}. {{name}}
                    </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col l6 offset-l3 m12 s10 offset-s1 center">
            <h4 class="header">Add a Burger!</h4> 
            <p><strong>(No puns necessary)</strong></p>
            <form class="create-form">
                <input type="text" name="name" id="burger" class="validate" placeholder="Burger Name">
                <button type="submit" class="btn waves-effect waves-light red accent-4">Add a Burger!</button>
            </form>
        </div>
    </div>
</div>